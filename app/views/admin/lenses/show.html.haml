- model_class = Lens
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:manufacturer_id) + ':'
  %br
  = @lens.manufacturer.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @lens.name
%p
  %strong= model_class.human_attribute_name(:lens_id) + ':'
  %br
  = @lens.lens_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_lenses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_lens_path(@lens), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_lens_path(@lens), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
