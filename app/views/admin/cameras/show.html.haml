- model_class = Camera
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:manufacturer_id) + ':'
  %br
  = @camera.manufacturer.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @camera.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_camera_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_camera_path(@camera), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_camera_path(@camera), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
