- model_class = Manufacturer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @manufacturers.each do |manufacturer|
      %tr
        %td= link_to manufacturer.id, admin_manufacturer_path(manufacturer)
        %td= manufacturer.name
        %td=l manufacturer.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_manufacturer_path(manufacturer), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_manufacturer_path(manufacturer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_manufacturer_path, :class => 'btn btn-primary'
