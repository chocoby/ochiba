- model_class = Photo
.page-header
  %h1= @photo.title

%p
  %strong= model_class.human_attribute_name(:flickr_photo_id) + ':'
  %br
  = @photo.flickr_photo_id
%p
  %strong= model_class.human_attribute_name(:camera) + ':'
  %br
  = @photo.camera.product_name
%p
  %strong= model_class.human_attribute_name(:lens) + ':'
  %br
  = @photo.lens.product_name
%p
  %strong= model_class.human_attribute_name(:taken_at) + ':'
  %br
  = @photo.taken_at
%p
  %strong= model_class.human_attribute_name(:exposure) + ':'
  %br
  = @photo.exposure
%p
  %strong= model_class.human_attribute_name(:aperture) + ':'
  %br
  = @photo.aperture
%p
  %strong= model_class.human_attribute_name(:iso_speed) + ':'
  %br
  = @photo.iso_speed
%p
  %strong= model_class.human_attribute_name(:focal_length) + ':'
  %br
  = @photo.focal_length
%p
  %strong= model_class.human_attribute_name(:photo_url) + ':'
  %br
  = link_to @photo.photo_url, @photo.photo_url
%p
  %strong= model_class.human_attribute_name(:photo_page_url) + ':'
  %br
  = link_to @photo.photo_page_url, @photo.photo_page_url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_photos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_photo_path(@photo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_photo_path(@photo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
